<!DOCTYPE html>

<html  lang="en" data-critters-container>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8" />
    <base href="/">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/wwwroot/your-app-name/styles.css">
    <script src="~/wwwroot/runtime.js" defer></script>
    <script src="~/wwwroot/polyfills.js" defer  type="module"></script>
    <script src="~/wwwroot/main.js" defer  type="module"></script>
</head>
<body>
    <div class="container-fluid">
    <div class="row">
     Sidebar 
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
        <div class="sidebar-sticky">
            <h5 class="sidebar-heading">Document Management</h5>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "Home")">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Upload", "Documents")">Upload Document</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewDocuments", "Documents")">View Documents</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Search", "Documents")">Search Documents</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Settings", "Home")">Settings</a>
                </li>
            </ul>
        </div>
    </nav>
     Main Content 
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <h1 class="mt-4">@ViewBag.Title</h1>
                <hr />
                <div>
                    @RenderBody()
                    <app-root></app-root>
                </div>
            </main>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
